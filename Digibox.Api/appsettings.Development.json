{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "SeedDb": true,
  "UseInMemoryDatabase": false,
  "EnableDetailedErrors": true,
  "EnableSensitiveDataLogging": true,
  "connectionStrings": {
    "defaultConnection": "Server=localhost,1433;Initial Catalog=DigiboxDb;Persist Security Info=False;User ID=sa;Password=PasswordO1.;MultipleActiveResultSets=False;TrustServerCertificate=False;Connection Timeout=120;"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "restrictedToMinimumLevel": "Information",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {SourceContext}>{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "ApplicationName": "Serilog.AuditSystemApi"
    }
  }
}
